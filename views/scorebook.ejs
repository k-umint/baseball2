<!doctype html>
<html lang="ja">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style2.css">
    <link rel="stylesheet" href="/stylesheets/header.css">

    <!-- <link rel="apple-touch-icon" href="/images/favicon.ico">
    <link rel="icon" href="/images/favicon2.ico"> -->

    <title>Baseball Score | Socre</title>

</head>

<body>

    <%- include("components/header"); %>

        <div id="main">
            <!-- <div class="container"> -->
            <!-- <div id="green-field" class="row justify-content-center align-self-center bg-success"> -->
            <div id="green-field" class="row bg-success">
                <div id="brown-field" class="col border border-white m-3">
                    <h2>Socre Book</h2>
                    <h3>Playing member</h3>
                    <table id="playing-member" class="table table-light">
                        <thead class="thead-dark text-center">
                            <tr id="tablehead-tr">
                                <th scope="col">打順</th>
                                <th scope="col">氏名</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% responseBody.playersList.forEach((element,index)=> { %>
                                <% if(element.order> 0){ %>

                                    <%- include("components/batter_2", { player : element, index:index}); %>
                                        <% } %>
                                            <% }); %>

                        </tbody>
                    </table>

                    <% if(responseBody.playersList.find(element=> element.order < 0)){ %>
                        <h4>Changed member</h4>
                        <table id="changed-member" class="table table-light">
                            <thead class="thead-dark text-center">
                                <tr id="tablehead2-tr">
                                    <th scope="col">氏名</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% responseBody.playersList.forEach((element,index)=> { %>
                                    <% if(element.order <=0){ %>
                                        <%- include("components/batter_changed", { player : element, index :
                                                index});%>
                                            <% } %>
                                                <% }); %>
                            </tbody>
                        </table>
                        <% }; %>
                            <a href=/games_history id="historyGameBtn" class="btn btn-warning">試合一覧</a>
                </div>
            </div>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS  -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <!-- <script src="/javascripts/basic2.js"></script> -->
        <script src="/javascripts/submit.js"></script>


</body>

</html>